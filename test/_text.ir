::Test<TestBase
  ^('Text')

:testKey
  @key.send('o')
  @key.input('abc')
  @key.code(DOM_VK_ESCAPE)
  itemlist := @util.select('.itemlist')
  @verify(itemlist.children.length == 1)
  @verify(itemlist.firstChild.innerText.trim() == 'abc')

:testButton
  @mouse.clickButton('T')
  @key.input('abc')
  @key.code(DOM_VK_ESCAPE)
  itemlist := @util.select('.itemlist')
  @verify(itemlist.children.length == 1)
  @verify(itemlist.firstChild.innerText.trim() == 'abc')

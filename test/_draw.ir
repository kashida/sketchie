::Test<TestBase
  ^('Draw')

:testNoImage
  @key.send('d')
  @mouse.drag(100, 100, 100, 100)
  @key.send('a')
  itemlist := @util.select('.itemlist')
  @verify(itemlist.children.length == 0)

:testKey
  @key.send('d')
  @mouse.drag(30, 30, 70, 70)
  @key.send('a')
  //window.setTimeout(##, 0)
  itemlist := @util.select('.itemlist')
  @verify(itemlist.children.length == 1)
  @verify(itemlist.firstChild.firstChild instanceof Image)

:testButton
  @mouse.clickButton('D')
  @mouse.drag(30, 30, 70, 70)
  @key.send('a')
  itemlist := @util.select('.itemlist')
  @verify(itemlist.children.length == 1)
  @verify(itemlist.firstChild.firstChild instanceof Image)

:::ext_to_type = {#}
    txt: ['text/plain', 'utf8']
    html: ['text/html', 'utf8']
    css: ['text/css', 'utf8']
    js: ['text/javascript', 'utf8']
    jpg: ['image/jpeg', null]
    png: ['image/png', null]

::FileType
  path\s\$
  @ext+\s\ _path.extname(path).substr(1)
  @mime+\s\ ''
  @format+\s\ ''

  // Find the mime type.
  if !(@ext in ext_to_type)
    =>
  @mime = ext_to_type[@ext][0]
  @format = ext_to_type[@ext][1]
  //log('> ' + path + ':' + @mime)

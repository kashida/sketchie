::
  @elem\Element\
  @center\data.Vec2\
  @startScale\data.Vec2\
  @startDist\n?\

:activate
  item\Element\$
  @elem = item
  @center = &data.Vec2(#)
    item.offsetLeft + item.offsetWidth / 2.0
    item.offsetTop + item.offsetHeight / 2.0
  @start = null
  @startScale = &data.Vec2(#)
    attr(item, 'xf_sx') || 1.0
    attr(item, 'xf_sy') || 1.0
  f_dispatcher.dragStart(@)

:deactivate
  @elem = null
  @center = null
  @startDist = null
  @start_sx = @start_sy = null
  f_dispatcher.dragTerminate()

:drag_update
  evt\Event\$
  dx := evt.clientX - @center.x
  dy := evt.clientY - @center.y
  dist := Math.sqrt(dx * dx + dy * dy)
  if !@startDist
    @startDist = dist / (attr(@elem, 'xf_s') || 1)
    => false
  set_attr(@elem, 'xf_s', String(dist / @startDist))
  set_xform(@elem)
  => false

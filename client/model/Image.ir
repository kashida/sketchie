::<%.Item
  @img+\!Image\ &Image()
  ^(dom.create('div'))
  @.element.appendChild(@img)

:isReference+\b\
  => !!dom.attr(@.element, 'ref_img')
:isReference*
  r\b\$
  if r
    @.element.setAttribute('ref_img', '1')
  else
    @.element.removeAttribute('ref_img')

:src+\s\
  => @img.src
:src*
  val\s\$
  @img.src = val

:width+\n\
  => @img.width

:height+\n\
  => @img.height

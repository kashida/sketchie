{
  "manifest_version": 2,
  "name": "Sketchie",
  "version": "0.1",
  "description": "Pen sketches and text notes in one page.",
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "icons": {"16": "images/favicon.png"},
  "permissions": [
    "fileSystem",
    // This is needed for export.
    "fileSystem.write",
    // Google Drive sync.
    "syncFileSystem",
    // We can probably drop this when syncfs is working.
    "unlimitedStorage",
    // Need this for execCommand('paste').
    "clipboardRead"
  ]
}
